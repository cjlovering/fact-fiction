@model FactOrFictionWeb.Models.Reference

@{
    ViewBag.Title = "Create";
}

<h2>Add Reference</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr/>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Link, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.LinkString, new {htmlAttributes = new {style = "width: 100%; max-width: 100%;", @class = "form-control"}})
            </div>
            @Html.HiddenFor(model => model.StatementId)
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Details", "Statement", new {id = @Model.StatementId}, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
